{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run forked vscode-markdown-todo Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"/tsdev/sample-data/",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "build forked vscode-markdown-todo"
		}
	]
}
